<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GKRef" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bright_BG</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/bright_BG</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_BG</item>
        <item name="colorSecondaryVariant">@color/higlight</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="background">@color/bright_BG</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/dark_BG</item>

    </style>

    <style name="Theme.GKRef.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GKRef.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GKRef.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>