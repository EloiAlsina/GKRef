            android:label="@string/app_name"
            android:theme="@style/Theme.GKRef.NoActionBar">
        </activity>

        <activity
            android:name=".Activities.Part1Activity"
            android:label="@string/app_name"
            android:theme="@style/Theme.GKRef.NoActionBar">
        </activity>

        <activity
            android:name=".Activities.FinalActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.GKRef.NoActionBar">
        </activity>

        <activity
            android:name="TransitionFragment"
            android:label="@string/app_name"
            android:theme="@style/Theme.GKRef.NoActionBar"
            tools:ignore="Instantiatable">
        </activity>
    </application>

</manifest>